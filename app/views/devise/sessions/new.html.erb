<h3 class="pl-15">Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :login, 'Enter Username or Email', class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Enter Password', class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group pl-15">
      <%= f.label :remember_me, class: "control-label" %>
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="pl-15">
    <%= f.submit "Log In", class: "btn btn-default btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
